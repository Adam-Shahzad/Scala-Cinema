# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                              controllers.Application.homepage
GET         /classification                controllers.Application.classifications
GET         /individualMovie               controllers.Application.individualMovie
GET         /listingsGallery               controllers.Application.listingsGallery
GET         /newReleasesGallery            controllers.Application.newReleasesGallery
GET         /openingTimes                  controllers.Application.openingTimes
GET         /payment                       controllers.Application.payment
POST        /payment                       controllers.Application.processPaymentForm
GET         /screens                       controllers.Application.screens
GET         /discussion                    controllers.Application.discussion
GET         /ticketBooking                 controllers.Application.loadBookingPage
GET         /seatSelection/:movie          controllers.Application.seatSelectionForm(movie)
POST        /seatSelection/:movie          controllers.Application.getSeatFormAction(movie)
GET         /ticketSelection/:movie        controllers.Application.ticketSelectionForm(movie)
POST        /ticketSelection/:movie        controllers.Application.getTicketFormAction(movie)
# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                  controllers.Assets.at(path="/public", file)
