# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                         controllers.NavigationSimple.homepage
GET         /classification                           controllers.NavigationSimple.classifications
GET         /individualMovie:address                  controllers.Application.individualMovie(address:Int,newReleases:Boolean)
GET         /listingsGallery                          controllers.NavigationSimple.listingsGallery
GET         /newReleasesGallery                       controllers.NavigationSimple.newReleasesGallery
GET         /openingTimes                             controllers.NavigationSimple.openingTimes
GET         /payment                                  controllers.Application.payment
POST        /payment                                  controllers.Application.processPaymentForm
GET         /screens                                  controllers.NavigationSimple.screens
GET         /emails                                   controllers.Application.listEmail
GET         /createEmails                             controllers.Application.createEmail
GET         /discussion                               controllers.DiscussionController.discussion
GET         /gettingThere                             controllers.NavigationSimple.gettingTherePage
GET         /getdiscussions                           controllers.DiscussionController.getDiscussions
GET         /nearby                                   controllers.NavigationSimple.aroundUs
GET         /ticketBooking:userID                     controllers.TicketBookingController.loadBookingPage(userID:Int)
GET         /seatSelection/:movie                     controllers.Application.seatSelectionForm(movie)
POST        /seatSelection/:movie                     controllers.Application.getSeatFormAction(movie)
GET         /ticketSelection/:movie                   controllers.Application.ticketSelectionForm(movie)
POST        /ticketSelection/:movie                   controllers.Application.getTicketFormAction(movie)
# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                             controllers.Assets.at(path="/public", file)
GET         /aboutUs                                  controllers.NavigationSimple.aboutUs
